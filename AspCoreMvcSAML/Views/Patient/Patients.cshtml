@model AspCoreMvcSAML.Models.PatientViewModel

@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
    <table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>DOB</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Patients.ToList())
        {
            <tr>
                <td>
                        @item.PatientID
                </td>
                <td>
                        @item.FirstName
                </td>
                <td>
                        @item.LastName
                </td>
                <td>
                        @item.DOB
                 </td>
                 <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                 </td>
        </tr>
    }
    </tbody>
</table>
